<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="board">
	<!-- 최대 글번호 얻기 
	<select id="maxNum" parameterType="model.board.BoardDTO">
		SELECT MAX(num) FROM board
	</select>
	-->
	<!-- 답글 끼워넣기 위치 확보
	<update id="getRef">
		update board set re_step=re_step+1 where ref=#{ref} and re_step>#{re_step}
	</update>
	 -->
	<!-- 글쓰기 답글쓰기 
	<insert id="inContent" parameterType="map">
		insert into board(writer,subject,content,pw,regdate,ref,re_step,re_level) values(#{writer},#{subject},#{content},#{pw},NOW(),#{ref},#{re_step},#{re_level})
	</insert>
	-->
	<!-- 글갯수, 페이지 처리 
	<select id="countContent" resultType="model.board.BoardDTO">
		select count(*) from board
	</select>
	-->
	<!-- 리스트 -->
	<select id="getList" resultType="model.board.BoardDTO">
		SELECT * FROM board
	</select>
	<!-- 
	<select id="searchList" resultType="model.board.BoardDTO">
		SELECT * FROM board where #{keyField} like %#{keyWord}% order by ref desc,re_step asc
	</select>
	 -->
</mapper>